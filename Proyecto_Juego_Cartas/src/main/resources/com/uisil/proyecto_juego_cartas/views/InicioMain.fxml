<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="rootAnchorPane"
            fx:controller="com.uisil.proyecto_juego_cartas.controllers.InicioMainController"
            prefWidth="640" prefHeight="480">

    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
          AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        
        <Label text="Nombre del Jugador:"/>
        <TextField fx:id="txtNombreJugador" promptText="Ingresa tu nombre" maxWidth="300"/>

        <Label text="Seleccionar dificultad:"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Fácil" onAction="#iniciarFacil" maxWidth="100"/>
            <Button text="Medio" onAction="#iniciarMedio" maxWidth="100"/>
            <Button text="Difícil" onAction="#iniciarDificil" maxWidth="100"/>
            <Button fx:id="btnAjustesInicio" text="⚙ Ajustes" onAction="#mostrarPanelAjustes" />
        </HBox>
    </VBox>
    <VBox fx:id="panelAjustes"
          alignment="CENTER"
          spacing="15"
          maxWidth="300" prefWidth="300"
          maxHeight="200" prefHeight="200"
          visible="false"
          layoutX="170" layoutY="140" 
          style="-fx-background-color: rgba(0,0,0,0.85); -fx-background-radius: 10; -fx-padding: 20;">
            <Label text="Ajustes" style="-fx-text-fill: white; -fx-font-size: 18px;" />
            <Slider fx:id="sliderVolumen" min="0" max="100" value="50"/>
            <CheckBox fx:id="chkMusica" text="Activar Música" selected="true"/>
            <Button text="Cerrar" onAction="#ocultarPanelAjustes"/>
        </VBox>
    

</AnchorPane>